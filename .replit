
run = "bash -lc 'set -e; if ! command -v pnpm >/dev/null 2>&1; then npm i -g pnpm; fi; pnpm i; pnpm prisma migrate dev -n replit_boot || true; pnpm prisma generate || true; pnpm ts-node scripts/seed.ts || true; pnpm dev'"
language = "nodejs"
hidden = [".config"]
modules = ["nodejs-20"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 45207
externalPort = 80

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 26224777
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run db:push"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
